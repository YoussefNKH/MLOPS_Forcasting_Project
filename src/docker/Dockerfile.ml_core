
FROM python:3.9-slim

WORKDIR /app

# Install dependencies
COPY src/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY src/ src/
# Copy data (optional, better to mount volume in production/dev)
COPY data/ data/ 

# Set python path so imports like 'from src...' work
ENV PYTHONPATH=/app

# Default command
CMD ["python", "src/main.py"]
